{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Demo Monitoring Rule",
    "type": "object",
    "properties": {
        "target": {
            "type": "object",
            "properties": {
                "service": {
                    "type": "string",
                    "description": "The name of the service to monitor"
                },
                "environment": {
                    "type": "string",
                    "description": "The environment (e.g. prod, dev)"
                }
            },
            "required": [
                "service",
                "environment"
            ],
            "description": "Target metadata"
        },
        "rule": {
            "type": "object",
            "properties": {
                "metric": {
                    "type": "string",
                    "description": "The metric to alert on"
                },
                "threshold": {
                    "type": "number",
                    "description": "The threshold value"
                },
                "duration": {
                    "type": "string",
                    "description": "Duration for the alert (e.g., 5m)"
                }
            },
            "required": [
                "metric",
                "threshold",
                "duration"
            ],
            "description": "Alert rule configuration"
        }
    },
    "required": [
        "target",
        "rule"
    ]
}