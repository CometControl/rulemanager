{
    "templateName": "k8s",
    "parameters": {
        "target": {
            "environment": "prod",
            "namespace": "demo",
            "workload": "multi-rule-app"
        },
        "rules": [
            {
                "rule_type": "cpu",
                "severity": "warning",
                "operator": ">",
                "threshold": 0.7
            },
            {
                "rule_type": "cpu",
                "severity": "critical",
                "operator": ">",
                "threshold": 0.9
            },
            {
                "rule_type": "ram",
                "severity": "critical",
                "operator": ">",
                "threshold": 2000000000
            }
        ]
    }
}